<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter, class: 'own-line-label' %>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body, class: 'own-line-label' %>
    <%= form.text_area :body, class: 'simple-text-area' %>
  </p>
  <p>
    <%= form.label :status,  class: 'own-line-label' %>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>